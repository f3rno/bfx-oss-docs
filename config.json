{
  "output": {
    "staticSite": "./dist/site",
    "unifiedJSDocDist": "./dist/jsdoc",
    "unifiedJSDocConfig": "./.jsdoc-merged.json"
  },

  "structure": {
    "root": "./_src",
    "sections": [{
      "id": "home",
      "type": "page",
      "root": "./home",
      "label": "Home",
      "filename": "index.html"
    }, {
      "id": "oss_projects",
      "type": "page",
      "root": "./oss_projects",
      "label": "Open Source Projects"
    }]
  },

  "layouts": {
    "engine": "nunjucks",
    "includePath": "_includes",
    "pagesPath": "_pages",
    "options": {
      "autoescape": false,
      "throwOnUndefined": true,
      "trimBlocks": true
    }
  },

  "assets": {
    "img": "_assets/img",
    "fonts": "_assets/fonts",
    "bfx-hf-chart": "node_modules/bfx-hf-chart/build",

    "css/highlightjs": "node_modules/highlight.js/styles",
    "css/normalize.css": "node_modules/normalize.css/normalize.css",
    "js/vendor/zepto.min.js": "node_modules/zepto/dist/zepto.min.js",
    "js/vendor/lodash.min.js": "node_modules/lodash/lodash.min.js",
    "js/vendor/debug.min.js": {
      "path": "node_modules/debug/src/browser.js",
      "build": "browserify",
      "pathOnWindow": "debug",
      "baseDir": "node_modules/debug/src"
    }
  },

  "scripts": {
    "babelConfig": {
      "sourceMaps": "inline",
      "sourceType": "script",
      "compact": true,
      "minified": true,
      "comments": false,
      "presets": [
        ["@babel/preset-env", {
          "targets": "> 0.25%, not dead"
        }]
      ],

      "plugins": [
        "@babel/plugin-proposal-object-rest-spread"
      ]
    }
  },

  "styles": {
    "config": {
      "compressed": true,
      "sourceMap": true,
      "sourceMapContents": true,
      "includePaths": [
        "_styles/"
      ]
    },

    "sources": {
      "index.css": "_styles/main.scss"
    }
  },

  "markdown": {
    "parser": "markdown-it",
    "options": {
      "html": true,
      "linkify": true,
      "typographer": true
    },

    "plugins": {
      "markdown-it-emoji": {},
      "markdown-it-highlightjs": {
        "auto": true,
        "code": true
      }
    }
  },

  "unifiedJSDoc": {
    "entryForbidden": [
      "dist",
      "build"
    ],

    "entryFallbacks": [
      "index.js",
      "lib/index.js",
      "src/index.js"
    ]
  },

  "projects": {
    "path": "./modules",
    "js": [
      "bitfinex-api-node",
      "bfx-api-mock-srv",
      "bfx-api-node-core",
      "bfx-api-node-models",
      "bfx-api-node-plugin-example",
      "bfx-api-node-plugin-managed-candles",
      "bfx-api-node-plugin-managed-ob",
      "bfx-api-node-plugin-ob-checksum",
      "bfx-api-node-plugin-seq-audit",
      "bfx-api-node-plugin-wd",
      "bfx-api-node-rest",
      "bfx-api-node-util",
      "bfx-api-node-ws1",
      "bfx-hf-backtest",
      "bfx-hf-chart",
      "bfx-hf-data-server",
      "bfx-hf-ext-plugin-bitfinex",
      "bfx-hf-ext-plugin-dummy",
      "bfx-hf-indicators",
      "bfx-hf-models",
      "bfx-hf-models-adapter-lowdb",
      "bfx-hf-models-adapter-sql",
      "bfx-hf-models-adapter-template",
      "bfx-hf-algo",
      "bfx-hf-server",
      "bfx-hf-strategy",
      "bfx-hf-strategy-exec",
      "bfx-hf-ui-config",
      "bfx-hf-util",
      "bfx-ws2-api-audit",
      "cbq-js",
      "caron",
      "eos-name-verify",
      "grenache-browser-http",
      "grenache-grape",
      "grenache-nodejs-base",
      "grenache-nodejs-http",
      "grenache-nodejs-link",
      "grenache-nodejs-utp",
      "grenache-nodejs-ws",
      "grenache-nodejs-ws-tls",
      "lib-js-util-currencies",
      "lib-js-util-math",
      "lib-js-util-number",
      "lib-js-util-symbol",
      "smidgen",
      "sunbeam",
      "wasteland"
    ]
  }
}
